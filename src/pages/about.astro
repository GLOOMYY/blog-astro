---
import BaseLayout from '../layouts/BaseLayout.astro';



const pageTitle = "Sobre mi";
const identity = {
  nombre: "Sebastian",
  ciudad: "Medellin",
  hobbies: ["Guitarra", "Programar", "Bicicleta"]
};

const skills = ["HTML", "CSS", "Javascript", "Python", "Pandas", "TensorFlow", "Scikit-learn", "Django", "FastAPI"];

const feliz = true;
const terminado = false;

const colorSkill = "gold";
---
<BaseLayout pageTitle={pageTitle}>

    <style define:vars={{colorSkill}}>
      h1 {
        color: red;
        font-size: 3em;
      }

      .skills {
        color: var(--colorSkill);
        font-weight: bold;
      }

    </style>


		<h2>Sobre mi en astro</h2>

    <p>Estos son algonos datos sobre mi:</p>

    <ul>
      <li>Me llamo {identity.nombre}</li>
      <li>Y soy de {identity.ciudad}</li>
      <li> Y mis Hobbies son: 
        <ul>
          {identity.hobbies.map((hobbie) => <li>{hobbie}</li>)}
        </ul>
      </li>
        
    </ul>
		
    <p>Mis habilidades son: </p>
    <ul>
      {skills.map((skill) => <li class="skills">{skill}</li>)}
    </ul>

    {feliz && <p>Estoy Feliz</p>}

    {terminado && <p>He terminado el blog</p>}

</BaseLayout pageTitle={pageTitle}>